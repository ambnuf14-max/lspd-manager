# ============ DISCORD ============
# Токен Discord бота
DISCORD_TOKEN=your_bot_token_here

# ID Discord сервера
GUILD_ID=1327306157378895882

# ID канала для запросов на роли от администрации
ADM_ROLES_CHANNEL_ID=1340283099749023774

# ID канала для запросов на роли от клиентов
CLIENT_REQUEST_CHANNEL_ID=1327306157760450732

# Application ID бота
APPLICATION_ID=1340242134573514842

# Префикс команд бота
COMMAND_PREFIX=!

# Название активности бота
BOT_ACTIVITY_NAME=sa-es.su

# Роль для управления пресетами (ID или оставьте пустым, чтобы доступ был только у владельца сервера)
PRESET_ADMIN_ROLE_ID=

# ============ БАЗА ДАННЫХ ============
# URL подключения к PostgreSQL базе данных
# Формат: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://bot_user:securepassword@localhost:5432/discord_bot

# ============ DISCORD ROLES ============
# Название роли Field Training Officer
FTO_ROLE_NAME=OO: Field Training Officer

# Название роли Police Officer I (стажер)
INTERN_ROLE_NAME=Police Officer I

# ============ GOOGLE SHEETS ============
# Название Google таблицы
GOOGLE_SHEET_NAME=LSPD Faction by Moon

# Путь к файлу с credentials для Google API
GOOGLE_CREDENTIALS_FILE=credentials.json

# Название листа в таблице
GSHEET_WORKSHEET_NAME=Таблица состава

# Номер колонки с Discord никнеймом (начиная с 0)
GSHEET_USERNAME_COLUMN=20

# Номер колонки для обновления (начиная с 0)
GSHEET_UPDATE_COLUMN=13

# Время обновления таблицы (часы через запятую, московское время)
GSHEET_UPDATE_TIMES=6,12,18,23

# ============ ВРЕМЕННЫЕ ИНТЕРВАЛЫ ============
# Время хранения записей в FTO очереди (в часах)
FTO_QUEUE_CLEANUP_HOURS=3

# Интервал проверки FTO очереди (в минутах)
FTO_QUEUE_CHECK_MINUTES=1

# ============ НАПОМИНАНИЯ О ЗАПРОСАХ ============
# Интервал проверки pending запросов (в минутах)
REMINDER_CHECK_MINUTES=5

# Время до первого напоминания (в часах от создания запроса)
REMINDER_FIRST_HOURS=2

# Время до второго напоминания (в часах от создания запроса)
REMINDER_SECOND_HOURS=6

# ============ ENVIRONMENT ============
# Окружение: production или development
ENVIRONMENT=production

# ============ ФУНКЦИИ ============
# Включить/выключить Google Sheets синхронизацию (true/false)
ENABLE_GSHEETS=false

# Включить/выключить автоматическое создание FTO Search сообщения при старте (true/false)
ENABLE_FTO_AUTO_MESSAGE=false
